<%- include('partials/header') %>

<div class="jumbotron centered">
  <div class="container">
    <h1 class="display-3">Discussion Forum</h1>
    <p class="lead">
      Discussion is impossible with someone who claims not to seek the truth,
      but already to possess it!
    </p>
    <hr />

    <% if (isauthenticated === false) { %>
    <a class="btn btn-light btn-lg" href="/register" role="button">Register</a>
    <a class="btn btn-light btn-lg" href="/login" role="button">Login</a>
    <% } else { %>
    <a class="btn btn-light btn-lg" href="/logout" role="button">Logout</a>
    <a class="btn btn-light btn-lg" href="/create" role="button"
      >Create a Discussion</a
    >
    <% } %>
    <a class="btn btn-dark btn-lg" href="/discussions" role="button"
      >All Discussions</a
    >
  </div>
</div>

<%- include('partials/footer') %>
